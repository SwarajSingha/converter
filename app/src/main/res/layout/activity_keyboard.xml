<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".keyboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:text="1"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:text="2"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="3"
                android:id="@+id/three"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_width="match_parent"
                android:text="4"
                android:gravity="center"
                android:id="@+id/four"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="5"
                android:id="@+id/five"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="6"
                android:id="@+id/six"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_width="match_parent"
                android:text="7"
                android:id="@+id/seven"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="8"
                android:id="@+id/eight"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="9"
                android:id="@+id/nine"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">

            <TextView
                android:layout_width="match_parent"
                android:text="C"
                android:id="@+id/c"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="0"
                android:id="@+id/zero"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:text="."
                android:id="@+id/decimal"
                android:gravity="center"
                android:textSize="50dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>


    </LinearLayout>
</layout>